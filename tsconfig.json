{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "noImplicitAny": false
  },
  "exclude": [
      "node_modules",
      "./node_modules",
      "./node_modules/*",
      "./node_modules/@types/node/index.d.ts",
      "babel.config.js",
      "metro.config.js",
      "GeniusMobile/jest.config.js",
      "__tests__/**/*-test.ts"
  ],
  "extends": "expo/tsconfig.base"
}